@model IEnumerable<BookPublisher.Web.DTOs.AuthorViewDTO>

@{
    ViewData["Title"] = "Lista de Autores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Autores</h1>
<hr />

<p>
    <a asp-action="Insert" class="btn btn-sm btn-primary">Novo autor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nome")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Editar", "Update", new { id=item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
